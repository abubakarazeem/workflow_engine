projectMembershipFlash.html('<%= j render partial: "project_memberships/notice" %>');
clearNewProjectMembershipForm();
<% if @project_member.present? %>
  <% if team?(@project_member) %>
    $("#team_memberships").append('<%= j render partial: "project_member", locals: {project_member: @project_member} %>');
  <% else %>
    $("#user_memberships").append('<%= j render partial: "project_member", locals: {project_member: @project_member} %>');
  <% end %>
  $("<%= project_member_view_id(@project_member) %>").hide().fadeIn();
<% end %>
$("#flash_messages").html("<%= j render partial: 'shared/flash' %>");
