<div class="modal fade" id="add_member_modal" tabindex="-1" role="dialog" aria-labelledby="add_member_label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="add_member_label">Add New Member</h5>
        <button type="button" class="close js-close-search" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
          <div class="modal-body">
            <div id="modal_flash">
              <% if notice.present? %>
                <%= render partial: "project_memberships/notice" %>
              <% end %>
            </div>
            <%= form_tag(search_for_project_project_memberships_path(@project), method: "post", remote: true) do %>
              <div class="form-group">
                <%= radio_button_tag(:member_type, "User", true) %>
                <%= label_tag(:add_member_user, "User") %>
                <%= radio_button_tag(:member_type, "Team") %>
                <%= label_tag(:add_member_team, "Team") %>
              </div>
              <div class="row">
                <div class="col-lg-9">
                  <%= text_field_tag :search_name, "", placeholder: "Search by Name", class: 'form-control', required: true%>
                  
                </div>
                <div class="col-lg-3">
                  <%= submit_tag("Search", :class => "btn btn-outline-success") %>                  
                </div>
              </div>
            <% end %>

          <%= form_tag(project_memberships_path, method: "post", remote: true) do %>
            <%= label_tag :member_name, "Selected Member", id: "member_name_tag", class: "mt-3 btn btn-success btn-block", hidden: true%>
            <%= text_field_tag :member_name, "", class: 'form-control', required: true, readonly: true, hidden: true%>
            <%= text_field_tag :project_id, "", class: 'form-control', hidden: true%>
            <%= text_field_tag :project_member_id, "", class: 'form-control', hidden: true%>
            <%= text_field_tag :project_member_type, "", class: 'form-control', hidden: true%>

            <div id="js_search_result_area"></div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary js-close-search" data-dismiss="modal">Close</button>
            <%= submit_tag("Add Member", :class => "btn btn-primary") %>
          </div>
        <% end %>
      </div>
  </div>
</div>
