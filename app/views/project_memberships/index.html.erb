<%= link_to 'Back', @project, class: 'btn btn-danger float-right' %>
<h1 class="mb-4"><%= @project.title %></h1>

<% if can? :create, ProjectMembership %>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#project_membership_modal">
    <i class="fas fa-user-plus mr-2"></i>
    <strong>Add Member</strong>
  </button>
  <!-- Add Member Modal -->
  <%= render 'new_membership_modal' %>
<% end %>

<h2 class="my-4">Teams</h2>
<div class="masonry" id="team_memberships">
  <%= render partial: "project_member", collection: @teams, as: :project_member %>
</div>

<h2 class="my-4">Members</h2>
<div class="masonry" id="user_memberships">
  <%= render partial: "project_member", collection: @users, as: :project_member %>
</div>

