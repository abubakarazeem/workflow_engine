
<div class="row">
  <div class="offset-sm-2 col-sm-8">
    <div class="card">
      <h1 class="card-header">Sign up</h1>
      <div class="card-body">
        <%= form_for(@new_user, url: user_registration_path, method: :post) do |f| %>

        <%= render 'devise/shared/users_additional_signup_form_attributes', { obj: @new_user, f: f } %>

        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control form-control-sm", placeholder: "john.doe@gmail.com" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %> <br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-sm", placeholder: "Password for John Doe." %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-sm", placeholder: "Confirm Password for John Doe." %>
        </div>

        <h4>Company Related Information.</h4>

        <%= f.fields_for :company do |company| %>
        <div class="field form-group">
          <%= company.label :name %><br />
          <%= company.text_field :name, autocomplete: "off", class: "form-control form-control-sm", placeholder: "E.g. 7vals Co." %>
        </div>
        <div class="field form-group">
          <%= company.label :subdomain %><br />
          <%= company.text_field :subdomain, autocomplete: "off", class: "form-control form-control-sm", placeholder: "E.g. 7vals" %>
        </div>
        <div class="field form-group">
          <%= company.label :description %><br />
          <%= company.text_area :description, autocomplete: "off", class: "form-control form-control-sm", placeholder: "E.g. 7vals is a product based company which focuses on the development of high utility products. :P" %>
        </div>
        <% end %> 
        

        <div class="actions text-right">
          <%= f.submit "Sign up", class: "btn btn-info btn-sm" %>
        </div>
        <% end %>
      </div>
      <div class="card-footer text-right"><em class="text-muted">Workflow Engine</em></div>
    </div>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
