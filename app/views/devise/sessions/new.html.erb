<div class="card shodowed_card">
  <h2 class="card-header">Log in</h2>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-6 d-none d-sm-block">
        <img src="/assets/signin.svg" class="img-fluid" />
      </div>

      <div class="col-sm-6 user-forms-container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "john.doe@gmail.com", value: @email, readonly: @email.present? %>
          </div>

          <div class="field form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password for John Doe" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group form-check">
              <label class="form-check-label">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </label>
            </div>
          <% end %>

          <div class="actions text-right">
            <%= f.submit "Log in", class: "btn btn-secondary btn-sm" %>
          </div>
        <% end %>
        <div class="text-center">
          <hr>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

  </div>
</div>
