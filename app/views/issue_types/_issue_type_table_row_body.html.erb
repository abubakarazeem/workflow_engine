<td><%= issue_type.name %></td>
<td>
  <% if issue_type.project_id.nil? %>
    <i class="fas fa-check-circle"></i>
  <% else %>
    <i class="fas fa-times-circle"></i>
  <% end %>
</td>
<td><%= issue_type_project_number(issue_type) %></td>
<td> 
  <%= link_to(issue_type_path(issue_type), method: 'delete', remote: true, data: { confirm: 'Are you sure to delete this issue type?'}, class: 'text-danger mr-2 mb-1 mb-md-0 fixed-width') do %>
    <i class="far fa-trash-alt"></i>
  <% end %>
  <% if @project.present? %>
    <%= link_to(edit_project_issue_type_path(@project, issue_type), remote: true, class: 'text-primary mr-2 mb-1 mb-md-0 fixed-width') do %>
      <i class="far fa-edit"></i>
    <% end %>
    <%= link_to(project_issue_type_path(@project, issue_type), remote: true, class: 'text-success fixed-width') do %>
      <i class="fas fa-eye"></i>
    <% end %>
  <% else %>
    <%= link_to(edit_issue_type_path(issue_type), remote: true, class: 'text-primary mr-2 mb-1 mb-md-0 fixed-width') do %>
      <i class="far fa-edit"></i>
    <% end %>
    <%= link_to(issue_type_path(issue_type), remote: true, class: 'text-success fixed-width') do %>
      <i class="fas fa-eye"></i>
    <% end %>
  <% end %>
</td>