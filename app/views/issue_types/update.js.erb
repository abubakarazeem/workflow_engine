issueTypeFlash.html('<%= j render partial: "layouts/notice" %>');
<% if @issue_type.errors.blank? %>
  tr = $("#<%= issue_type_table_row_id(@issue_type) %>");
  updateClassAndId(tr);
  tr.html('<%= j render partial: 'issue_type_table_row_body', locals: {issue_type: @issue_type} %>');
  issueTypesTable.row(tr).invalidate().draw();
<% else %>
  issueTypesErrors.html('<%= j render partial: "layouts/errors", locals: {model: @issue_type} %>');
<% end %>
$("#flash_messages").html("<%= j render partial: 'shared/flash' %>");

function updateClassAndId(row) {
  row.attr('id', "<%= issue_type_table_row_id(@issue_type) %>");
  row.attr('class', "<%= issue_type_table_row_class(@issue_type) %>");
}
