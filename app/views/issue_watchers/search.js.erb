<% if params[:watcher_action] == IssueWatcher::WATCHER_ACTION[:create] %>
  $('#add_modal_search_results').html('')
    .html("<%= j render partial: 'watchers_search_result', locals: { watchers: @watchers, issue: @issue, action: 'create' } %>")
<% elsif params[:watcher_action] == IssueWatcher::WATCHER_ACTION[:destroy] %>
  $('#remove_modal_search_results').html('')
    .html("<%= j render partial: 'watchers_search_result', locals: { watchers: @watchers, issue: @issue, action: 'destroy' } %>")
<% end %>

