<div class="container">
  <table class="table table-hover" id="documents_table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
      </tr>
    </thead>
    <tbody>
      <% documents.each do |document| %>
        <tr>
          <td><%= remove_extension_from_filename(document.document_file_name) %></td>
          <td>
            <%= document.document_content_type %>
            <div class="btn-group dropright float-right mr-2">
              <i class="fas fa-ellipsis-v" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
              <div class="dropdown-menu">
                <%= link_to 'View', document.document.url(:original, false), target: :_blank, class: 'dropdown-item mb-1 mb-md-0 fixed-width' %>
                <%= link_to 'Delete', document_path, method: 'delete', data: { confirm: 'Are you sure to remove this document?'}, class: 'dropdown-item mb-1 mb-md-0 fixed-width' %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
