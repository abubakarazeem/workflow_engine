issueStateFlash.html('<%= j render partial: "layouts/notice" %>');
<% if @issue_state.errors.blank? %>
  $("#issue_state_form").trigger('reset');
  issueStatesTableBody.append('<%= j render partial: 'issue_state_table_row', locals: {issue_state: @issue_state} %>');
  tr = $("#<%= issue_state_table_row_id(@issue_state) %>");
  issueStatesTable.row.add(tr).draw();
<% else %>
  issueStatesErrors.html('<%= j render partial: "layouts/errors", locals: {model: @issue_state} %>');
<% end %>