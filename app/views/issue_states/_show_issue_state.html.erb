  <div class="jumbotron">
    <h1 class="text-center">
      <%= @issue_state.name %><span class="badge badge-pill badge-dark ml-1" style="font-size: 0.3em;"><%= @issue_state.issue_id.nil? ? 'global' : link_to('issue', '#', class: 'text-white') %></span>
