<td><%= issue_state.name %></td>
<td>
  <span class="badge badge-pill badge-danger">
    <%= link_to(@issues_count[issue_state.id], issues_issue_state_path(issue_state), class: 'text-white font-weight-bold', remote: true) %>
  </span>
  <div class="btn-group dropright float-right mr-4">
    <i class="fas fa-ellipsis-v text-secondary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
    <div class="dropdown-menu">
      <%= link_to(issue_state_path(issue_state), method: 'delete', remote: true, data: { confirm: 'Are you sure to delete this issue state?'}, class: 'dropdown-item text-danger mr-2 mb-1 mb-md-0 fixed-width') do %>
        Delete <i class="far fa-trash-alt"></i>
      <% end %>
      <%= link_to(edit_issue_state_path(issue_state), remote: true, class: 'dropdown-item text-primary mr-2 mb-1 mb-md-0 fixed-width') do %>
          Edit <i class="far fa-edit"></i>
      <% end %>
    </div>
  </div>
</td>