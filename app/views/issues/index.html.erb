<h1>Issues</h1>
  <%= form_tag(filter_issues_path, method: 'get', remote: true, id: "issues_filter_form" ) do %>
    <div class="row">
      <div class="col-md-3">
        <label>Projects</label>
        <%= select_tag "project_id", options_from_collection_for_select(Project.all, :id, :title, params[:project_id]), class: 'form-control', include_blank: "All" %> 
      </div>

      <div class="col-md-3">
        <label>Assignee</label>
        <%= select_tag "assignee_id", options_from_collection_for_select(User.all, :id, :first_name, params[:assignee_id]), class: 'form-control', include_blank: "All" %>
      </div>

      <div class="col-md-3">
        <label>Issue State</label>
        <%= select_tag "state_id", options_from_collection_for_select(IssueState.all, :id, :name, params[:state_id]), class: 'form-control', include_blank: "All"%>
      </div>

      <div class="col-md-3">
        <label>Issue Type</label>
        <%= select_tag "type_id", options_from_collection_for_select(IssueType.all, :id, :name, params[:type_id]), class: 'form-control', include_blank: "All"%>
      </div>
    </div>
    </br>
    <%= submit_tag "Search", id: 'issue_filter_submit', class: 'd-none' %>
  <% end %>
</br>
<br> 

<div id="paginator_1">
    <%= paginate @issues %>
</div>

<table class="table table-hover" id="issues_table">
  <thead>
    <tr>
      <th scope="col">Project Title</th>
      <th scope="col">Issue Type</th>
      <th scope="col">Title</th>
      <th scope="col">Assignee</th>
      <th scope="col">Status</th>
      <th scope="col">Priority</th>
      <th scope="col">Created</th>
      <th scope="col">Due Date</th>
    </tr>
  </thead>
  <tbody id="issues_list">
    <%= render partial: "issues", locals: { issues: @issues } %>
  </tbody>
</table>

<div id="paginator_2">
    <%= paginate @issues, remote: true %>
</div>