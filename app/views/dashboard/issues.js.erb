projectIssues.hide();
projectIssuesTable.destroy();
$('#project_issues_table tbody').html('<%= j render partial: "shared/list_issues", collection: @issues, as: :issue %>');

projectIssuesTable = $('#project_issues_table').DataTable({
    info: false,
    paging: false,
    scrollY:  "38vh",
    scrollCollapse: true,
    oLanguage: {
        sEmptyTable: "No issue found"
    }
  });
projectIssues.fadeIn(700);
projectIssuesTable.columns.adjust();