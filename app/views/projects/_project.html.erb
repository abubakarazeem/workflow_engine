
<% if can?(:index, project) %>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= link_to project.title, project_path(project.sequence_num)%>
      <span class="badge badge-secondary badge-pill float-right ml-2"><%= project.issues.size%></span>
      <span class="badge badge-danger badge-pill float-right"><%= link_to 'Issues', '#', class: 'text-white'%></span>
    </h5>
    <p class="card-text text-truncate"><%= project.description%></p>
  </div>
  <div class="card-footer">
    <small class="text-muted">Last updated <%= time_ago_in_words(project.updated_at) %> ago</small>
  </div>
</div>
<% end %>