<div class="row">
  <div class="col-10">
    <p class="h1 mb-5">Listing Projects</p>
  </div>
  <div class="col-2">
    <% if can? :create, Project %>
      <%= link_to "New Project", new_project_path, class: 'btn btn-secondary float-right' %>
    <% end %>
  </div>
</div>



<table class="table table-hover" id="projects_table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Last Updated</th>
      <th>Created At</th>
    </tr>
  </thead>
    <%= render @projects %>
</table>