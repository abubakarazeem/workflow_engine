<%= form_for @project do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div>
    <%= f.submit class: 'btn btn-secondary float-right' %>
  </div>
<% end %>
