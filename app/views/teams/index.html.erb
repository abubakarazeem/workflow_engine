

 
<div class="container ">

  <div class="row" style="float: right;">
    <%= link_to 'Add Team', new_team_path,class: 'btn btn-primary btn-sm' %>
  </div>

  <div class="row">
    <% @all_teams.each_with_index do |team, index_no| %>

      <% if index_no+1 % 3 == 0 %>
        </div><div class="row">

      <% else %>

        <div class="col-md-6">
            <div class="card" style="width:400px">
              <img class="card-img-top" src="/assets/team_card.jpeg" alt="Card image" style="width:100%">
              <div class="card-body">
                <h4 class="card-title"><%= team.name %></h4>
                <p class="card-text">Welcome to <%= team.name%></p>
              <!--   Manage button visibilities using  CanCanCan -->
                <%= link_to 'Manage Team', team_path(team),class: 'btn btn-primary btn-sm' %><!--  shown to admins only -->
                
                <%= link_to 'Join Team', team_path(team),class: 'btn btn-primary btn-sm' %> <!-- shown to members , change is_approve to true for this member-->


                <%= link_to "Delete", team_path(team), method: :delete,data:{confirm: 'Are you sure?'}, :class => 'btn btn-primary btn-sm' %>

                <%= link_to 'Edit', edit_team_path(team),class: 'btn btn-primary btn-sm' %>
              </div>
            </div>
            <br>
          </div>
      <% end %>
  
    <% end %>
  
  
  
</div>