 
<div class="container">
 <%= form_for @team do |f| %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        
      </div>
    </div>
  </div>
  <hr>
  <%= f.submit({:class => 'btn btn-primary'}) %>
<% end %>
</div>